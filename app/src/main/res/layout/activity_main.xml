<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A476E6"
   android:weightSum="3"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="0dp">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="wrap_content"
          android:layout_height="108dp"
          android:layout_gravity="center"
          android:src="@drawable/hrdev" />
  </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1.4"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/userNameEditID"
            android:hint="username"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="50dp">

        </EditText>



        <EditText
            android:id="@+id/passwordEditId"
            android:hint="password"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </EditText>

        <Button
            android:id="@+id/singinButtonID"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:text="Sign in"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_designbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"></Button>

        <Button
            android:id="@+id/signUpButtonID"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_designbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"></Button>

    </LinearLayout>
    <View
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="0dp"></View>


</LinearLayout>